{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"plugin:react/recommended",
		"standard-with-typescript",
		"plugin:react/jsx-runtime"
		// "airbnb-typescript"
	],
	"overrides": [
		{
			"files": "*",
			"rules": {
				"indent": [
					"error",
					"tab",
					{
						"VariableDeclarator": "first",
						"MemberExpression": 1,
						"ObjectExpression": 1
					}
				]
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": [
			"tsconfig.json"
		]
	},
	"plugins": [
		"react"
	],
	"rules": {
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 2,
				"maxBOF": 0,
				"maxEOF": 0
			}
		],
		"space-before-function-paren": "off",
		"@typescript-eslint/space-before-function-paren": [
			"error",
			"never"
		],
		"@typescript-eslint/indent": 4
	}
}